<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailNoteEditorActivity"
    android:background="#DCFDFF">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="575dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/activity_edit_note_rectangle">

        <EditText
            android:id="@+id/input_title_note_detil"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:hint="title"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/input_content_note_detil"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_title_note_detil"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="20"
            android:hint="description"
            android:textColor="@color/black" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/border_button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="640dp"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:id="@+id/btn_save_note_detil"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="save"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"/>

        <Button
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:id="@+id/btn_delete_note_detil"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:backgroundTint="@color/white"
            android:text="delete" />

    </RelativeLayout>

</RelativeLayout>