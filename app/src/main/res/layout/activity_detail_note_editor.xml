<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailNoteEditorActivity"
    android:background="#DCFDFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/activity_edit_note_rectangle"
        android:orientation="vertical">

        <EditText
            android:id="@+id/input_title_note_detil"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:hint="title"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/input_content_note_detil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_title_note_detil"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="20"
            android:hint="description"
            android:textColor="@color/black" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_save_note_detil"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/white"
        android:text="save"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_delete_note_detil"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/white"
        android:text="delete"
        android:textColor="@color/black" />

