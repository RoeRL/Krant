<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:background="#DCFDFF">

    <ImageView
        android:layout_marginTop="120dp"
        android:layout_width="368dp"
        android:layout_height="207dp"
        android:layout_gravity="center"
        android:src="@drawable/logo_krant2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_marginLeft="52dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:gravity="top"

        android:text="USERNAME"
        android:textSize="12sp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/input_username_register"
        android:inputType="textEmailAddress"
        android:backgroundTint="#000000"
        android:layout_gravity="center"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_marginLeft="52dp"
        android:layout_alignParentTop="true"
        android:gravity="top"

        android:text="EMAIL"
        android:textSize="12sp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/input_email_register"
        android:inputType="textEmailAddress"
        android:backgroundTint="#000000"
        android:layout_gravity="center"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_marginLeft="52dp"
        android:layout_alignParentTop="true"
        android:gravity="top"

        android:text="PASSWORD"
        android:textSize="12sp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/input_password_register"
        android:inputType="textEmailAddress"
        android:backgroundTint="#000000"
        android:layout_gravity="center"
        android:layout_width="315dp"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btn_register"
        android:layout_marginTop="10dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:text="Register"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:backgroundTint="@color/white"
        android:elevation="4dp" />

    <TextView
        android:id="@+id/alreay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="top"

        android:text="Already Have An Account?"
        android:textSize="12sp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"

        android:text="_________________________"
        android:textSize="12sp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/txt_buttonLogin"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="top"

        android:textStyle="bold"
        android:text="Login"
        android:textSize="16sp"
        android:textColor="#000000" />

</LinearLayout>