<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:orientation="vertical"
    android:background="#DCFDFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_marginTop="120dp"
                android:layout_width="368dp"
                android:layout_height="207dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/logo_krant2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="42dp"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="4dp"
                    android:text="USERNAME"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/input_username_register"

                    android:backgroundTint="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="4dp"
                    android:text="EMAIL"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/input_email_register"

                    android:inputType="textEmailAddress"
                    android:backgroundTint="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="4dp"
                    android:text="PASSWORD"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    />

                <EditText
                    android:id="@+id/input_password_register"

                    android:inputType="textPassword"
                    android:backgroundTint="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <Button
                    android:id="@+id/btn_register"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:text="Register"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:backgroundTint="@color/white"
                    android:elevation="6dp" />

                <TextView
                    android:id="@+id/alreay"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Already Have An Account?"
                    android:textSize="12sp"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="______________________________"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/txt_buttonLogin"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:text="Login"
                    android:textSize="16sp"
                    android:textColor="#000000" />

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</LinearLayout>